<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <RollForward>Major</RollForward>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Set up the NuGet package to be an MCP server -->
    <PackAsTool>true</PackAsTool>
    <PackageType>McpServer</PackageType>

    <!-- Set recommended package metadata -->
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageId>Microsoft.DataFactory.MCP</PackageId>
    <PackageVersion>0.1.0-beta</PackageVersion>
    <PackageTags>AI; MCP; server; stdio</PackageTags>
    <Description>An MCP server using the MCP C# SDK for DataFactory operations.</Description>
    <Authors>Microsoft</Authors>
    <Company>Microsoft Corporation</Company>
    <PackageProjectUrl>https://github.com/microsoft/DataFactory.MCP</PackageProjectUrl>
    <RepositoryUrl>https://github.com/microsoft/DataFactory.MCP.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <!-- Using a standard OSS license expression; adjust if different license is intended -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <!-- Some internal compliance checks still look for LicenseUrl -->
    <PackageLicenseUrl>https://opensource.org/license/mit/</PackageLicenseUrl>
    <PackageIcon>Data-Factory-300.png</PackageIcon>
    <PackageReleaseNotes>Initial preview (0.1.0-beta) of the DataFactory MCP server. API surface subject to change.</PackageReleaseNotes>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
  </PropertyGroup>

  <!-- Include additional files for browsing the MCP server. -->
  <ItemGroup>
    <None Include="..\.mcp\server.json" Pack="true" PackagePath="/.mcp/" />
    <None Include="..\README.md" Pack="true" PackagePath="/" />
    <None Include="appsettings.json" Pack="true" PackagePath="/content/" />
    <!-- Package icon (updated) -->
    <None Include="..\assets\Data-Factory-300.png" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.0-preview.6.25358.103" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.8" />
    <PackageReference Include="Microsoft.Identity.Client" Version="4.76.0" />
    <PackageReference Include="ModelContextProtocol" Version="0.3.0-preview.2" />
  </ItemGroup>

</Project>
