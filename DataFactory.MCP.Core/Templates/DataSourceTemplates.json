{
    "version": "1.0",
    "description": "Data source connector templates for M Query",
    "dataSources": {
        "sql": {
            "name": "Sql.Database",
            "description": "SQL Server / Azure SQL Database",
            "template": "Sql.Database(\"{server}\", \"{database}\")",
            "requiredParameters": [
                "server",
                "database"
            ]
        },
        "lakehouse": {
            "name": "Lakehouse.Contents",
            "description": "Microsoft Fabric Lakehouse",
            "template": "let\n    Pattern = Lakehouse.Contents([]),\n    Workspace = Pattern{[workspaceId = \"{workspaceId}\"]}[Data],\n    Lakehouse = Workspace{[lakehouseId = \"{lakehouseId}\"]}[Data],\n    Table = Lakehouse{[Id = \"{tableName}\", ItemKind = \"Table\"]}[Data]\nin\n    Table",
            "requiredParameters": [
                "workspaceId",
                "lakehouseId",
                "tableName"
            ]
        },
        "web": {
            "name": "Web.Contents",
            "description": "Web URL / REST API",
            "template": "Web.Contents(\"{url}\")",
            "requiredParameters": [
                "url"
            ]
        },
        "csv": {
            "name": "Csv.Document",
            "description": "CSV File from Web",
            "template": "Csv.Document(\n    Web.Contents(\"{url}\"),\n    [Delimiter = \",\", Columns = {columns}, QuoteStyle = QuoteStyle.None]\n)",
            "requiredParameters": [
                "url",
                "columns"
            ]
        },
        "sharepoint": {
            "name": "SharePoint.Files",
            "description": "SharePoint Files",
            "template": "SharePoint.Files(\"{siteUrl}\", [ApiVersion = 15])",
            "requiredParameters": [
                "siteUrl"
            ]
        },
        "odata": {
            "name": "OData.Feed",
            "description": "OData Feed",
            "template": "OData.Feed(\"{url}\")",
            "requiredParameters": [
                "url"
            ]
        },
        "warehouse": {
            "name": "Warehouse.Contents",
            "description": "Microsoft Fabric Warehouse",
            "template": "let\n    Pattern = Warehouse.Contents([]),\n    Workspace = Pattern{[workspaceId = \"{workspaceId}\"]}[Data],\n    Warehouse = Workspace{[warehouseId = \"{warehouseId}\"]}[Data],\n    Table = Warehouse{[Id = \"{tableName}\", ItemKind = \"Table\"]}[Data]\nin\n    Table",
            "requiredParameters": [
                "workspaceId",
                "warehouseId",
                "tableName"
            ]
        }
    }
}